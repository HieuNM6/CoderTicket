<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= simple_form_for @event do |e| %>
       <%= e.input :name %>
       <%= e.input :starts_at %>
       <%= e.input :ends_at %>
       <%= e.input :hero_image_url %>
       <%= e.input :extended_html_description %>
       <%= e.input :venue_id, collection: @hash_events.sort.map {|k,v| [v,k]} %>
       <%= e.input :category_id, collection: @categorys%>
       <div class="text-xs-center">
         <%= e.button :submit, class: "btn btn-success btn-lg" %>
       </div>
    <% end %>
  </div>
</div>

