<% if @event.user_id == current_user.id %>
  <%= simple_form_for @event do |e| %>
    <%= e.input :name %>
    <%= e.input :starts_at %>
    <%= e.input :ends_at %>
    <%= e.input :extended_html_description %>
    <%= e.input :venue_id, collection: @hash_events.sort.map {|k,v| [v,k]} %>
    <%= e.input :category_id, collection: @categorys%>
    <%= e.button :submit %>
  <% end %>
<% else %>
  <h1 class="text-xs-center">
    You can't edit event of other user
  </h1>
<% end %>
