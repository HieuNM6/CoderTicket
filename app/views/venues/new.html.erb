<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= simple_form_for @venue  do  |f| %>
      <%= f.input :name %>
      <%= f.input :full_address %>
      <%= f.input :region_id, collection: @regions %>
      <div class="text-xs-center">
        <%= f.button :submit,class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
